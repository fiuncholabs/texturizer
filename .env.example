# Environment Configuration Template
# Copy this file to .env and update values for local development

# Flask Environment (development, production, testing)
FLASK_ENV=development

# Secret key for session management (generate a random string for production)
SECRET_KEY=your-secret-key-here-change-in-production

# Server Configuration
PORT=8000  # Using 8000 by default (macOS AirPlay uses 5000)

# File Upload Limits
MAX_CONTENT_LENGTH=52428800  # 50MB in bytes

# Processing Timeouts (in seconds)
UPLOAD_TIMEOUT=300
PROCESSING_TIMEOUT=600

# Output Constraints (prevent excessive resource usage)
MAX_OUTPUT_TRIANGLES=20000000  # Maximum triangles in output (20 million)
MAX_MEMORY_MB=4096             # Maximum memory usage estimate (4GB)
MAX_OUTPUT_FILE_SIZE_MB=500    # Maximum output file size (500MB)

# Rate Limiting
RATELIMIT_ENABLED=false  # Set to 'true' to enable rate limiting in development
RATELIMIT_DEFAULT=10 per minute
RATELIMIT_PROCESSING=3 per minute
# RATELIMIT_STORAGE_URL=redis://localhost:6379  # Uncomment if using Redis

# CORS (Cross-Origin Resource Sharing)
CORS_ENABLED=false  # Set to 'true' if you need CORS support
CORS_ORIGINS=*  # Comma-separated list of allowed origins

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
# LOG_FILE=/var/log/texturizer.log  # Uncomment to enable file logging

# Workers (for production)
MAX_WORKERS=1

# Google Analytics
# GA_MEASUREMENT_ID=G-XXXXXXXXXX  # Uncomment and add your GA4 Measurement ID to enable analytics
